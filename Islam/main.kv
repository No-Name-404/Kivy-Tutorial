FloatLayout:
    MDBox:
        color:'#000101' if app.theme_cls.theme_style=='Dark' else '#5a5a5a'
        radius:[0,0,0,0]

    MDBox:
        orientation:'vertical'
        BoxLayout:
            color:'#000101' if app.theme_cls.theme_style=='Dark' else '#5a5a5a'
            radius:[0,0,0,0]
            size_hint_y:None
            size:1,dp(50)
            pos_hint:{'top':1}
            BoxLayout:
                MDLabel:
                    text:'[b]Islam[/b]'
                    color:1,1,1,1
                    markup:True
                    halign:'center'
                    font_size:dp(20)

        MDBox:
            orientation:'vertical'
            color:'#252121' if app.theme_cls.theme_style=='Dark' else '#a1a1a1'
            radius:[dp(20),dp(20),0,0]
            BoxLayout:
                size_hint_y:None
                size:1,dp(80)
                pos_hint:{'top':1}
                spacing:dp(10)
                FloatLayout:
                    id:channel

            GridLayout:
                cols:1
                BoxLayout:
                    orientation:'vertical'
                    spacing:dp(10)
                    BoxLayout:
                        size_hint_y:None
                        size:1,dp(150)
                        ScrollView:
                            bar_width: dp(0)
                            scroll_type: ['bars', 'content']
                            GridLayout:
                                rows:1
                                size: self.minimum_size[0],1
                                size_hint: None, None
                                spacing:dp(10)
                                id:Islam

                    ScrollView:
                        BoxLayout:
                            size_hint_y:None
                            height:self.minimum_height
                            orientation:'vertical'
                            spacing:dp(10)
                            padding:dp(10)
                            id:videos
                            BoxLayout:
                                orientation:'vertical'
                                size_hint_y:None
                                size:1,dp(70)
                                MDLabel:
                                    color:(1,1,1,1) if app.theme_cls.theme_style=='Dark' else (0,0,0,1)
                                    font_name:'tools/db/ar.otf'
                                    text: app.ar_text('لا إله إلا االله')
                                    halign:'center'
                                    font_size:dp(27)

    ThemeButton:

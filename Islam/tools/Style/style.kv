#:import hex kivy.utils.get_color_from_hex

<ThemeButton@MDIconButton>
    icon: 'brightness-7'
    pos_hint: {"left": .02,'top':1}
    on_release:
        theme = {
        'Light':'brightness-3',
        'Dark':'brightness-7'}
        app_theme = app.theme_cls.theme_style
        app.theme_cls.theme_style =  'Light' if  self.icon == 'brightness-7' else 'Dark'
        self.icon = theme[app.theme_cls.theme_style]

<MDBox@BoxLayout>
    color:'#ffffff00'
    radius:[20,20,20,20]
    canvas:
        Color:
            rgba:hex(self.color)
        RoundedRectangle:
            pos:self.pos
            size:self.size
            radius:self.radius

<MDGrid@GridLayout>
    color:'#ffffff00'
    radius:[20,20,20,20]
    canvas:
        Color:
            rgba:hex(self.color)
        RoundedRectangle:
            pos:self.pos
            size:self.size
            radius:self.radius

<IconImage>
    size:dp(70),dp(70)

<-FullImage>:
    canvas:
        Color:
            rgb: (1, 1, 1)
        RoundedRectangle:
            texture: self.texture
            size: self.size
            pos: self.pos
            radius:[dp(20)]*4

<MCard>
    canvas:
        Color:
            rgba:hex('#000101' if app.theme_cls.theme_style=='Dark' else '#7e7d7d')
        RoundedRectangle:
            pos:self.pos
            size:self.size
            radius:self.radius
    size_hint: None, None
    size:dp(100),dp(150)
    orientation:'vertical'
    image:self.image
    id:t
    FullImage:
        source:t.image

    MDIconButton:
        icon:'youtube'
        on_release:
            app.OpenUrl(t.url)
